<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>OnlineFoodCourt</display-name>
  <welcome-file-list>
    <welcome-file>show.jsp</welcome-file>
  </welcome-file-list>
  <resource-ref>
    <description>JNDI DataSource</description>
    <res-ref-name>jndi/OnlineFoodCourt</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  <servlet>
    <servlet-name>Log4JTestServlet</servlet-name>
    <servlet-class>com.cugb.javaee.onlinefoodcourt.test.Log4JTestServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Log4JInitServlet</servlet-name>
    <servlet-class>com.cugb.javaee.onlinefoodcourt.test.Log4JInitServlet</servlet-class>
    <init-param>
      <param-name>log4j-properties-location</param-name>
      <param-value>/WEB-INF/classes/log4j.properties</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>Log4JTestServlet</servlet-name>
    <url-pattern>/test</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>com.cugb.javaee.onlinefoodcourt.action.LoginContrler</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>action</servlet-name>
    <servlet-class>com.cugb.javaee.onlinefoodcourt.action.ActionControl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>action</servlet-name>
    <url-pattern>/action</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
    <servlet-name>OrderAdd</servlet-name>
    <servlet-class>com.cugb.javaee.onlinefoodcourt.action.OrderAddControl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>OrderAdd</servlet-name>
    <url-pattern>/OrderAdd</url-pattern>
  </servlet-mapping>
  
    <servlet>
     <servlet-name>dishModify</servlet-name>
     <servlet-class>com.cugb.javaee.onlinefoodcourt.action.dishModifyControl</servlet-class>
   </servlet>
   <servlet-mapping>
     <servlet-name>dishModify</servlet-name>
     <url-pattern>/dishModify</url-pattern>
   </servlet-mapping>
   <servlet>
     <servlet-name>dishAdd</servlet-name>
     <servlet-class>com.cugb.javaee.onlinefoodcourt.action.DishAddControl</servlet-class>
   </servlet>
   <servlet-mapping>
     <servlet-name>dishAdd</servlet-name>
     <url-pattern>/dishAdd</url-pattern>
   </servlet-mapping>
   <filter>
     <filter-name>CharFilter</filter-name>
     <filter-class>com.cugb.javaee.onlinefoodcourt.utils.CharsetFilter</filter-class>
   </filter>
   <filter-mapping>
     <filter-name>CharFilter</filter-name>
     <url-pattern>/*</url-pattern>
     <dispatcher>REQUEST</dispatcher>
   </filter-mapping>
</web-app>